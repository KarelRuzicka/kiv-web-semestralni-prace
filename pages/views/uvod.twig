{% extends "base.template.twig" %}

{% block body %}

    {% include("navbar.template.twig") %}

    <div class="jumbotron text-center">
    <h1>Seznam pokrmů</h1>
    <p>Všechny podávané pokrmy s jejich cenou a hodnocením</p>
    </div>
    
    <div class="container">
    <div class="row">


        {% for product in products %}
        <div class="col-sm-6  col-md-4 col-xs-12">
            <div class="item" itemid="{{product.id}}">
                <h3>{{product.name}}</h3>
                <p>{{product.description}}</p>

                <div class="item-properties">
                    <p><b>{{product.price}}</b> Kč<br>
                    Hodnocení: {% if product.rating > 0%}<b>{{product.rating | round(1)}}</b>/10{% else %} Nehodnoceno {% endif %}</p>
                </div>
            </div>
        </div>
        {% endfor %}
        

    </div>
    </div>

{% endblock %}


{% block scripts %}
<script src="js/uvod.js"></script>
{% endblock %}