{% extends "base.template.twig" %}

{% block title %}
<title>Úprava pokrmů</title>
{% endblock %}

{% block body %}

<div class="container">

    <div class="col-sm-4 col-sm-offset-4 col-xs-12 form">

        <form action="" method="POST">

            <div class="form-group">
                <label for="name">Název pokrmu:</label>
                <input type="text" class="form-control" id="name" value="{{query_edit.name}}" placeholder="Název pokrmu" name="name" required>
            </div>
            <div class="form-group">
                <label for="description">Popis:</label>
                <textarea class="form-control" id="description" placeholder="Popis" name="description" required rows="2" maxlength="150">{{query_edit.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="price">Cena (Kč):</label>
                <input type="text" class="form-control" id="price" value="{{query_edit.price}}" placeholder="Cena" name="price" required>
            </div>

            <input type="hidden" name="id" value="{{query_edit.id}}">

            <button type="submit" class="btn btn-primary btn-block">Odeslat</button>
        </form>

    
    </div>



</div>

{% endblock %}
